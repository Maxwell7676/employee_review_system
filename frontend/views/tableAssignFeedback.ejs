
<%- include('./partial/_header.ejs'); %>

  <style>
    /* CSS for the table */
    .table {
      width: 80%; /* Reduced width to 80% */
      margin: 0 auto; /* Center the table on the page */
      border-collapse: collapse;
    }

    /* Styling the table header */
    .table thead th {
      background-color: #007bff;
      color: #fff;
      text-align: left;
    }

    /* Styling table rows */
    .table tbody tr {
      border-bottom: 1px solid #ddd;
    }

    /* Styling table cells */
    .table td,
    .table th {
      padding: 8px;
    }

    /* Zebra-striped table rows */
    .table tbody tr:nth-child(odd) {
      background-color: #f2f2f2;
    }

    /* Making the table responsive */
    .table-responsive {
      overflow-x: auto;
    }

    /* CSS for the plus sign icon */
    .plus-icon {
      display: inline-block;
      width: 20px;
      height: 20px;
      line-height: 20px;
      text-align: center;
      background-color: #007bff;
      color: #fff;
      border-radius: 50%;
      cursor: pointer;
    }

    /* CSS for the button */
    .button {
      padding: 5px 10px;
      border: 1px solid #007bff;
      color: #007bff;
      text-decoration: none;
      border-radius: 4px;
    }

    /* CSS for the table heading */
    .table-heading {
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #007bff;
    }
  </style>

<nav class="navbar navbar-expand-lg" style="background-color: #3498db; color: #fff;">
    <div class="container">
      <!-- Left side -->
      <a class="navbar-brand" href="/employeeUser/dashboard" style="color: #fff;">Employee Dashboard</a>
  
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <a class="nav-link" href="/employeeUser/reviewTable"><h5 style="color: #fff;">Performance view</h5></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/employeeUser/signin"><h5 style="color: #fff;">Employee Review</h5></a>
        </li>
      </ul>
  
      <!-- Center -->
  
      <!-- Right side -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/employeeUser/signin"><h5 style="color: #fff;">Sign Out</h5></a>
        </li>
      </ul>
    </div>
  </nav>
  

  <div class="container mt-5">
    <div class="table-heading">Performance Selected List</div>
    <div class="table-responsive mt-3">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Employee</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% performanceSelectedList.forEach((item) => { %>
            <tr>
              <td style="width: 200px;"><%= item.title %></td>
              <td style="width: 300px;"><%= item.description %></td>
              <td style="width: 200px;"><%= item.employee %></td>
              <td style="width: 80px;">
                <!-- Plus icon button -->
                <form action="/employeeUser/reviewTable/<%= item._id %>" method="post">
                 <button type="submit" >    
                <div class="plus-icon">
                  <i class="fas fa-plus"></i>
                </div>
                </button>
                </form>

                <!-- Alternatively, use a regular button -->
                <!-- <button class="button">+</button> -->
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>


  <%- include('./partial/_footer.ejs'); %>

