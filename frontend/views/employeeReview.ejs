<div class="container mt-5" style="max-width: 500px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
  <h1 class="text-center">Employee Review</h1>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Performance Review Title</h5>

      <form action="/admin/reviewTable/toManage/<%= Result._id %>" method="post">

        
          <div class="form-group">
            <label for="title_<%= Result._id %>">Title</label>
            <input type="text" class="form-control" id="title_<%= Result._id %>" name="title" value="<%= Result.title %>" required>
          </div>
          <div class="form-group">
            <label for="description_<%= Result._id %>">Description</label>
            <textarea class="form-control" id="description_<%= Result._id %>" name="description" rows="3" required><%= Result.description %></textarea>
          </div>
          <div class="form-group">
            <label for="employee_<%= Result._id %>">Employee</label>
            <input type="text" class="form-control" id="employee_<%= Result._id %>" name="employee" value="<%= Result.employee %>" required>
          </div>
          <!-- Add other form fields as needed -->
          <div class="form-group">
            <label for="comment_<%= Result._id %>">Comments</label>
            <textarea class="form-control" id="comment_<%= Result._id %>" name="comment" rows="3" required></textarea>
          </div>
          <div class="form-group">
            <label for="ratings_<%= Result._id %>">Ratings</label>
            <input type="number" class="form-control" id="ratings_<%= Result._id %>" name="ratings" min="1" max="5" required>
          </div>
          <button type="submit" class="btn btn-primary">Submit Feedback</button>
      

      </form>
    
    </div>
  </div>
</div>

